---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

/* Props com fallback */
const {
  title = "City And Colour Â· Fan Site",
  description = "A fan-made academic project about City and Colour, featuring a playlist, blog posts and artist information.",
  image = "/images/background.jpg" // fallback de imagem para compartilhamento
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <!-- Page Title -->
    <title>{title}</title>

    <!-- Basic SEO -->
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Theme Color (browser UI) -->
    <meta name="theme-color" content="#000000" />

    <!-- Open Graph (Facebook, WhatsApp, Discord, Instagram) -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:alt" content="City and Colour artwork" />
    <meta property="og:url" content={Astro.url} />

    <!-- Twitter / X -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <!-- Font Awesome (social icons) -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>

  <body>
    <!-- Global Header -->
    <Header />

    <!-- Page Content -->
    <slot />

    <!-- Global Footer -->
    <Footer />
  </body>
</html>
